{
  "name": "basics",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "prestart": "npm run build",
    "start": "env-cmd -f ./config/prod.env ts-node src/index.ts",
    "predev": "npm run build && env-cmd -f ./config/dev.env ts-node src/index.ts",
    "dev": "env-cmd -f ./config/dev.env nodemon",
    "get-schema": "graphql get-schema -p prisma --dotenv config/dev.env",
    "test": "env-cmd -f ./config/test.env jest --watchAll"
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      "node_modules"
    ],
    "watch": [
      "src",
      "tests"
    ],
    "exec": "npm run predev",
    "ext": "ts, graphql"
  },
  "jest": {
    "preset": "ts-jest/presets/default",
    "globals": {
      "ts-jest": {
        "globalSetup": "./tests/jestConfig/globalSetup.ts",
        "globalTeardown": "./tests/jestConfig/globalTeardown.ts"
      }
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.1",
    "@types/graphql": "^14.5.0",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/node": "^12.11.7",
    "babel-register": "^6.26.0",
    "bcryptjs": "^2.4.3",
    "env-cmd": "^10.0.1",
    "express": "^4.17.1",
    "graphql-cli": "^2.16.4",
    "graphql-yoga": "^1.16.7",
    "jsonwebtoken": "^8.3.0",
    "prisma-binding": "^2.1.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.33",
    "@types/jest": "^24.0.23",
    "@types/uuid": "^3.4.5",
    "@types/ws": "^6.0.3",
    "jest": "^24.9.0",
    "nodemon": "^1.19.2",
    "prettier": "1.18.2",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "typescript": "^3.6.4"
  }
}
